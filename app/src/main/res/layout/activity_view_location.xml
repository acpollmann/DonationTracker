<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.ViewLocationActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="107dp"
        android:layout_marginEnd="225dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Logo"
        app:layout_constraintBottom_toTopOf="@+id/searchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/location_list"
        android:layout_width="259dp"
        android:layout_height="832dp"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1dp"
        android:listSelector="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simpleExpandableListView"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="301dp"
        android:layout_height="42dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toTopOf="@+id/location_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ExpandableListView
        android:id="@+id/simpleExpandableListView"
        android:layout_width="79dp"
        android:layout_height="436dp"
        android:layout_marginStart="20dp"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1dp"
        android:listSelector="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/location_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Button"
        android:onClick="onLoadButtonPressed"/>

</android.support.constraint.ConstraintLayout>